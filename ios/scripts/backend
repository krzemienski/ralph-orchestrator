#!/bin/bash
# Ralph Mobile Backend CLI wrapper
# Provides convenient commands for backend management

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export SRCROOT="$(dirname "$SCRIPT_DIR")"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

PID_FILE="$SRCROOT/.ralph-backend-pid"
LOG_FILE="$SRCROOT/.ralph-backend.log"

usage() {
    echo -e "${BLUE}Ralph Mobile Backend CLI${NC}"
    echo ""
    echo "Usage: $0 <command>"
    echo ""
    echo "Commands:"
    echo "  start      Start the backend server"
    echo "  stop       Stop the backend server"
    echo "  restart    Restart the backend server"
    echo "  status     Check if backend is running"
    echo "  logs       View backend logs (tail -f)"
    echo "  clean      Stop backend and remove all files"
    echo ""
    exit 1
}

check_status() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        if ps -p "$PID" > /dev/null 2>&1; then
            return 0
        fi
    fi
    return 1
}

cmd_start() {
    if check_status; then
        echo -e "${GREEN}‚úì Backend already running${NC}"
        cmd_status
        exit 0
    fi
    echo -e "${GREEN}üöÄ Starting backend...${NC}"
    "$SCRIPT_DIR/start-backend.sh"
}

cmd_stop() {
    if ! check_status; then
        echo -e "${YELLOW}‚ö† Backend not running${NC}"
    fi
    "$SCRIPT_DIR/stop-backend.sh"
}

cmd_restart() {
    echo -e "${BLUE}‚ôªÔ∏è  Restarting backend...${NC}"
    cmd_stop
    sleep 1
    cmd_start
}

cmd_status() {
    if check_status; then
        PID=$(cat "$PID_FILE")
        echo -e "${GREEN}‚úì Backend is running (PID: $PID)${NC}"

        # Check health endpoint
        if curl -s -f http://127.0.0.1:8080/api/health > /dev/null 2>&1; then
            echo -e "${GREEN}‚úì Health check: OK${NC}"
        else
            echo -e "${RED}‚úó Health check: FAILED${NC}"
        fi

        echo -e "${BLUE}üìç Server: http://127.0.0.1:8080${NC}"
        echo -e "${GREEN}‚úì No authentication required (local server)${NC}"
    else
        echo -e "${RED}‚úó Backend is not running${NC}"
        exit 1
    fi
}

cmd_logs() {
    if [ ! -f "$LOG_FILE" ]; then
        echo -e "${RED}‚úó No log file found${NC}"
        exit 1
    fi
    echo -e "${BLUE}üìú Backend logs (Ctrl+C to exit):${NC}"
    tail -f "$LOG_FILE"
}

cmd_clean() {
    echo -e "${YELLOW}üßπ Cleaning up...${NC}"
    cmd_stop
    rm -f "$LOG_FILE"
    echo -e "${GREEN}‚úì All backend files removed${NC}"
}

# Main command dispatcher
case "${1:-}" in
    start)
        cmd_start
        ;;
    stop)
        cmd_stop
        ;;
    restart)
        cmd_restart
        ;;
    status)
        cmd_status
        ;;
    logs)
        cmd_logs
        ;;
    clean)
        cmd_clean
        ;;
    *)
        usage
        ;;
esac
