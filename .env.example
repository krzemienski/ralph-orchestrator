# Ralph Orchestrator Environment Variables
# Copy this file to .env and customize values

# ============================================
# Web Dashboard Configuration
# ============================================

# Secret key for JWT tokens (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
# If not set, a random key is generated on each restart (existing tokens become invalid)
RALPH_WEB_SECRET_KEY=

# JWT token expiration in minutes (default: 1440 = 24 hours)
RALPH_TOKEN_EXPIRE_MINUTES=1440

# Default web dashboard credentials
RALPH_WEB_USERNAME=admin
RALPH_WEB_PASSWORD=admin
# Or set a pre-hashed password (bcrypt hash)
# RALPH_WEB_PASSWORD_HASH=

# ============================================
# ACP (Agent Communication Protocol) Settings
# ============================================

# ACP agent CLI command (e.g., gemini, claude)
RALPH_ACP_AGENT=gemini

# Permission mode: auto_approve, deny_all, allowlist, interactive
RALPH_ACP_PERMISSION_MODE=auto_approve

# ACP agent timeout in seconds
RALPH_ACP_TIMEOUT=300

# ============================================
# Q Chat Adapter Settings
# ============================================

# Q Chat command (default: q)
RALPH_QCHAT_COMMAND=q

# Q Chat timeout in seconds (default: 600)
RALPH_QCHAT_TIMEOUT=600

# Q Chat prompt file path
RALPH_QCHAT_PROMPT_FILE=PROMPT.md

# Trust all tools without approval (default: true)
RALPH_QCHAT_TRUST_TOOLS=true

# Non-interactive mode (default: true)
RALPH_QCHAT_NO_INTERACTIVE=true

# ============================================
# Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
RALPH_LOG_LEVEL=INFO

# Log file path (if not set, uses log_dir/ralph_orchestrator.log)
# RALPH_LOG_FILE=

# Log directory (default: .logs)
RALPH_LOG_DIR=.logs

# Enable console output (default: true)
RALPH_LOG_CONSOLE=true

# Enable detailed logging with file/line info (default: false)
RALPH_LOG_DETAILED=false

# Maximum log file size in bytes (default: 10MB)
RALPH_LOG_MAX_BYTES=10485760

# Number of backup log files to keep (default: 5)
RALPH_LOG_BACKUP_COUNT=5
